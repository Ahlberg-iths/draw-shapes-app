<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="500.0" minWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.ahlberg.drawshapesapp.AppController">
      <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="700.0">
            <Button fx:id="undoButton" mnemonicParsing="false" text="&lt;--">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
            <Button fx:id="redoButton" mnemonicParsing="false" text="--&gt;">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Pane prefHeight="40.0" prefWidth="400.0" />
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0">
                  <Label text="Collaborate:" />
                  <Button fx:id="connectButton" mnemonicParsing="false" text="Connect">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0">
                  <Label text="Save to file:" />
                  <Button fx:id="saveButton" mnemonicParsing="false" text="Save">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            </VBox>
      </HBox>
      <HBox prefHeight="450.0" prefWidth="700.0">
            <VBox prefHeight="200.0" prefWidth="150.0" spacing="5.0">
                  <Label text="Shape:" />
                  <ComboBox fx:id="shapeComboBox" prefWidth="125.0">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></ComboBox>
                  <Label text="Color: ">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
                  <ColorPicker fx:id="colorPicker" minHeight="25.0" prefWidth="125.0">
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></ColorPicker>
                  <Label text="Size:">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
         <Slider fx:id="sizeSlider" max="200.0" min="10.0">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Slider>
         <Pane prefHeight="120.0" prefWidth="150.0" />
                  <Label text="In select mode:">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
                  <ToggleButton fx:id="selectModeButton" mnemonicParsing="false" text="Turn ON" underline="true">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></ToggleButton>
         <Button fx:id="updateButton" mnemonicParsing="false" text="Change selected">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <padding>
            <Insets top="50.0" />
         </padding>
            </VBox>
            <Canvas fx:id="canvas" height="430.0" width="550.0">
         <cursor>
            <Cursor fx:constant="CROSSHAIR" />
         </cursor></Canvas>
      </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
   </padding>
</VBox>
